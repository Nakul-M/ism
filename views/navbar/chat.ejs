<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>MDoNER Portal Chatbot</title>
<style>
  body {
    margin: 0;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    background: #e5ddd5;
    display: flex;
    flex-direction: column;
    height: 100vh;
  }

  header {
    background: #075e54;
    color: white;
    padding: 15px;
    text-align: center;
    font-size: 22px;
    font-weight: 600;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  #chatContainer {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    padding: 10px 0;
    overflow: hidden;
    background: #ece5dd;
  }

  #answerBox {
    width: 95%;
    max-width: 800px;
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    padding: 10px;
    gap: 10px;
    scroll-behavior: smooth;
    border-radius: 15px;
    background: #fff;
  }

  .msg-container { display: flex; gap: 5px; align-items: flex-end; }
  .bot-container { justify-content: flex-start; }
  .user-container { justify-content: flex-end; }

  .msg {
    max-width: 70%;
    padding: 12px 16px;
    border-radius: 20px;
    line-height: 1.5;
    font-size: 15px;
    opacity: 0;
    transform: translateY(10px);
    animation: fadeIn 0.3s forwards;
    word-wrap: break-word;
  }

  .bot { background: #fff; color: #333; border-bottom-left-radius: 0; }
  .user { background: #25d366; color: #fff; border-bottom-right-radius: 0; }

  .avatar { width: 32px; height: 32px; border-radius: 50%; }

  @keyframes fadeIn { to { opacity: 1; transform: translateY(0); } }

  form {
    width: 95%;
    max-width: 800px;
    display: flex;
    padding: 10px;
    gap: 8px;
    background: #f0f0f0;
    border-radius: 25px;
    flex-shrink: 0;
  }

  input {
    flex: 1;
    padding: 12px 15px;
    border-radius: 25px;
    border: 1px solid #ccc;
    outline: none;
    font-size: 15px;
  }

  button {
    background: #075e54;
    color: white;
    border: none;
    border-radius: 25px;
    padding: 12px 18px;
    cursor: pointer;
    font-size: 14px;
  }

  button:hover { background: #054c44; }

  footer {
    background: #f5f5f5;
    color: #555;
    text-align: center;
    padding: 6px 0;
    border-top: 1px solid #ddd;
  }
</style>
</head>
<body>
<header>STUDENT HELPER</header>

<div id="chatContainer">
  <div id="answerBox">
    <div class="bot-container msg-container">
      <img src="https://i.pravatar.cc/32?img=3" class="avatar" />
      <div class="msg bot"><b>AI:</b> Hello ðŸ‘‹! I am your Student Helper Bot. How can I assist you today?</div>
    </div>
  </div>

  <form id="queryForm">
    <input type="text" id="userQuery" placeholder="Ask about portal..." required />
    <button type="submit">Ask</button>
  </form>
</div>

<footer>AI BASED. REFER SCHOOL FOR MORE INFORMATION</footer>

<script>
const answerBox = document.getElementById("answerBox");

function scrollToBottom() {
  answerBox.scrollTop = answerBox.scrollHeight;
}

document.getElementById("queryForm").addEventListener("submit", async e => {
  e.preventDefault();
  const userQuery = document.getElementById("userQuery").value.trim();
  if (!userQuery) return;

  // User message
  const userContainer = document.createElement("div");
  userContainer.className = "user-container msg-container";
  userContainer.innerHTML = `<div class="msg user">${userQuery}</div>
                             <img src="https://i.pravatar.cc/32?img=5" class="avatar"/>`;
  answerBox.appendChild(userContainer);
  scrollToBottom();
  document.getElementById("userQuery").value = "";

  // Typing indicator
  const typing = document.createElement("div");
  typing.className = "typing";
  typing.innerText = "Portal is typing...";
  answerBox.appendChild(typing);
  scrollToBottom();

  try {
    const res = await fetch("/query", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ userQuery })
    });

    typing.remove();
    if (!res.ok) throw new Error("Bad response");

    const data = await res.json();
    const botContainer = document.createElement("div");
    botContainer.className = "bot-container msg-container";
    botContainer.innerHTML = `<img src="https://i.pravatar.cc/32?img=3" class="avatar"/>
                              <div class="msg bot"><b>AI:</b> ${data.answer || "No response from model."}</div>`;
    answerBox.appendChild(botContainer);
    scrollToBottom();
  } catch (err) {
    typing.remove();
    const errorContainer = document.createElement("div");
    errorContainer.className = "bot-container msg-container";
    errorContainer.innerHTML = `<img src="https://i.pravatar.cc/32?img=3" class="avatar"/>
                                <div class="msg bot"><b>AI:</b> Error fetching answer.</div>`;
    answerBox.appendChild(errorContainer);
    scrollToBottom();
  }
});

// Scroll to last message on page load
window.addEventListener("load", scrollToBottom);
</script>
</body>
</html>
