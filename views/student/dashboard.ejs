<div class="container-fluid">
  <div class="row">
    <!-- Mobile Toggle Button -->
    <button class="btn btn-dark d-md-none mb-3 ms-3 mt-2" type="button" data-bs-toggle="collapse" data-bs-target="#studentSidebar">
      â˜° Menu
    </button>

    <!-- Sidebar -->
    <nav id="studentSidebar" class="collapse d-md-block col-md-2 bg-dark sidebar text-white min-vh-100">
      <div class="p-3">
        <h4 class="text-white mb-4">Student Panel</h4>
        <a href="/student/<%= student._id %>" class="d-block text-white mb-2"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a>
        <a href="/student/<%= student._id %>/profile" class="d-block text-white mb-2"><i class="bi bi-person-circle me-2"></i>Profile</a>
        <a href="/student/<%= student._id %>/results" class="d-block text-white mb-2"><i class="bi bi-journal-check me-2"></i>Results</a>
        <a href="/student/<%= student._id %>/attendance" class="d-block text-white mb-2"><i class="bi bi-calendar-check me-2"></i>Attendance</a>
        <a href="/logout" class="d-block text-danger mt-3"><i class="bi bi-box-arrow-right me-2"></i>Logout</a>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="col-md-10 ms-sm-auto px-5 py-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Welcome, <%= student.name %></h2>
        <span class="text-muted"><i class="bi bi-calendar2-week me-1"></i> <%= new Date().toLocaleDateString() %></span>
      </div>

      <!-- Stats Cards -->
      <div class="row mb-4">
        <div class="col-md-4">
          <div class="card text-white bg-primary">
            <div class="card-body">
              <h5 class="card-title">Class</h5>
              <p class="fs-4"><%= student.class || "N/A" %>-<%= student.section || "N/A" %> </p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card text-white bg-success">
            <div class="card-body">
              <h5 class="card-title">Roll Number</h5>
              <p class="fs-4"><%= student.rollNo || "N/A" %></p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card text-white bg-warning">
            <div class="card-body">
              <h5 class="card-title">Academic Year</h5>
              <p class="fs-4"><%= new Date().getFullYear() %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Activity Table -->
      <div class="card">
        <div class="card-header bg-white fw-bold">Recent Activity</div>
        <div class="card-body table-responsive">
          <table class="table table-hover table-bordered align-middle">
            <thead>
              <tr>
                <th>#</th>
                <th>Activity</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1</td>
                <td>Viewed Result</td>
                <td><%= new Date().toLocaleString() %></td>
              </tr>
              <tr>
                <td>2</td>
                <td>Logged In</td>
                <td><%= new Date().toLocaleString() %></td>
              </tr>
              <tr>
                <td>3</td>
                <td>Checked Attendance</td>
                <td><%= new Date().toLocaleString() %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>
</div>