
<% if (typeof showFooter === 'undefined' || showFooter) { %>
  <!-- Contact Section -->
  <section class="py-5 bg-primary text-white">
    <div class="container">
      <div class="row">
        <!-- Left Info -->
        <div class="col-md-6">
          <h2>Contact Us</h2>
          <p><strong>Address:</strong> Indra Shishu Nagrota, Jammu and Kashmir, 184210</p>
          <p><strong>Phone:</strong> ****** , ******</p>
          <p><strong>Email:</strong> ******* email</p>
          <iframe src="https://maps.google.com/maps?q=Shiksha%20Niketan%20Higher%20Secondary%20School&t=&z=13&ie=UTF8&iwloc=&output=embed" width="100%" height="250" style="border:0;" allowfullscreen></iframe>
        </div>

        <!-- Contact Form -->
        <div class="col-md-6 bg-white text-dark p-4 rounded shadow">
          <h3 class="mb-4">Let's Get In Touch!</h3>
          <form method="POST" action="/contact">
            <div class="mb-3">
              <input type="text" class="form-control" name="name" placeholder="Name" required />
            </div>
            <div class="mb-3">
              <input type="tel" class="form-control" name="phone" placeholder="Phone Number" required />
            </div>
            <div class="mb-3">
              <input type="email" class="form-control" name="email" placeholder="Email" required />
            </div>
            <div class="mb-3">
              <textarea class="form-control" name="message" rows="4" placeholder="Message" required></textarea>
            </div>
            <button type="submit" class="btn btn-dark w-100">SUBMIT YOUR MESSAGE</button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <% } %>
